<main class="register">
    <section class="register__box">
        <div class="register__box__col pt-2 pb-2 pl-2 pr-2">
            <h2 class="register__box__col--title">
                Hola, que tal
            </h2>
            <p class="register__box__col--saludo">
                Bienvenido a OfficeBot
            </p>
            <form class="register__box__col__form" method="post">
                <input type="hidden" name="_csrf" value=<%- csrfToken %>>
                <div class="form-group">
                    <input type="text" placeholder="Ingresa tu nombre de usuario" name="username" value="<%- usuario ? usuario.username : '' %>">
                    <div class="form-group__error">
                        <%- errores ? errores.username : '' %>
                    </div>
                </div>
                <div class="form-group">
                    <input type="email" placeholder="Ingresa tu correo" name="email" value="<%- usuario ? usuario.email : '' %>">
                    <div class="form-group__error">
                        <%- errores ? errores.email : '' %>
                    </div>
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Ingresa tu contraseña" name="password" value="<%- usuario ? usuario.password : '' %>">
                    <div class="form-group__error">
                        <%- errores ? errores.password : '' %>
                    </div>
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Confirma tu contraseña" name="confirmPassword">
                    <div class="form-group__error">
                        <%- errores ? errores.confirmPassword : '' %>
                    </div>
                </div>
                <div class="from-group">
                    <input type="submit" value="Registrar" class="btn btn-principal">
                </div>
            </form>
        </div>
        <div class="register__box__col">
            <h1 class="register__box__col--logo">OfficeBot</h1>
            <img src="/img/register.jpg" alt="">
        </div>
    </section>
</main>